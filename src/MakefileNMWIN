plotg : plotg.obj flags.$(MOD_EXT) hprogs.obj help.obj $(PLAT).obj
	$(COMP90) -o $(BDIR)/plotg.exe  $(ODIR)/plotg.obj $(ODIR)/flags.$(MOD_EXT) $(ODIR)/hprogs.obj $(ODIR)/help.obj $(ODIR)/$(PLAT).obj $(LFLAGS)

