	$(COMP90) -c reafit.$(SEX) -o $(ODIR)/reafit.obj

reafit : $(OBJECTS) reafit.obj 
	$(COMP90) -o $(BDIR)/reafit.exe $(ODIR)/reafit.obj $(LOBJECTS) $(LFLAGS)

